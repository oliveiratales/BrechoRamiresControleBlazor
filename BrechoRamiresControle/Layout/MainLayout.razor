@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="Brechó Ramires" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="true" Style="width: max-content;" Expanded="@sidebarExpanded" Toggle="@ToggleSidebar">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />
            <RadzenPanelMenuItem Text="Produtos" Icon="checkroom">
                <RadzenPanelMenuItem Text="Cadastrar Produto" Icon="add_circle" Path="/novoproduto" />
                <RadzenPanelMenuItem Text="Estoque" Icon="inventory" Path="/estoque" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Vendas" Icon="shopping_cart">
                <RadzenPanelMenuItem Text="Nova Venda" Icon="credit_card" Path="/novavenda" />
                <RadzenPanelMenuItem Text="Total de Vendas" Icon="sell" Path="/vendas" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Indicadores" Icon="trending_up" Path="/indicadores" />
            <RadzenPanelMenuItem Text="Configurações" Icon="settings" Path="/configuracoes" />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4 rz-background-color-white rz-border-base-300 rz-border-radius">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        2023 © Brechó Ramires
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = false;

    void ToggleSidebar()
    {
        sidebarExpanded = !sidebarExpanded;
    }
}
